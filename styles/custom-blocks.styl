.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color $bgTip
    border-color $borderTip
    color $colorTip
  &.warning
    background-color $bgWarning
    border-color $borderWarnig
    color $colorWarning
    .custom-block-title
      color $colorWarning
    a
      color $textColor
  &.danger
    background-color $bgDanger
    border-color $borderDanger
    color $colorDanger
    .custom-block-title
      color $colorDanger
    a
      color $textColor
  &.details
    display block
    position relative
    border-radius 2px
    margin 1.6em 0
    padding 1.6em
    background-color $bgDetails
    color $colorDetails
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer
